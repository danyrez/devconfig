{
  // Apariencia de la interfaz de trabajo
  "workbench.colorTheme": "One Dark Pro",
  "workbench.editor.enablePreview": false,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "symbols.hidesExplorerArrows": false,

  // Editor
  "editor.fontSize": 15,
  "editor.fontFamily": "'Cascadia Code PL'",
  "editor.fontLigatures": true,
  "editor.inlayHints.fontFamily": "'Cascadia Code'",
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.experimental.asyncTokenization": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.stickyScroll.enabled": false,
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,

  // Terminal
  "terminal.integrated.fontFamily": "'Cascadia Code'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.env.linux": {},

  // Explorador de archivos
  "explorer.fileNesting.expand": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": ".eslintrc.cjs,.eslintrc.js, .eslintrc.json, .gitignore, isconfig.json, next.config.mjs, package-lock.json, .nvmrc, pnpm-lock.yaml, postcss.config.js, tailwind.config.js,bun.lockb,tailwind.config.mjs,tailwind.config.cjs,vite.config.js,tsconfig.json, readme.MD, README.md, eslint.config.js,.prettierrc, vercel.json, .prettierrc.json, .prettierignore ",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  // Prettier y formato
  "prettier.endOfLine": "lf",
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // Configuración de ESLint
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.problems.shortenToSingleLine": true,
  "eslint.format.enable": true,

  // Autoimport
  "autoimport.doubleQuotes": true,

  // Consola y rendimiento
  "console-ninja.featureSet": "Community",

  // Misceláneos
  "notebook.markup.fontSize": 12,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.autoSave": "afterDelay",
  "css.lint.unknownAtRules": "ignore",
  "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  "github.copilot.editor.enableAutoCompletions": true,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "terminal.integrated.env.windows": {},
  "workbench.activityBar.location": "top",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "toggle",
  "explorer.confirmDragAndDrop": false
}
